# Desativa a listagem de diretórios
Options -Indexes

# Ativa o motor de reescrita
RewriteEngine On

# Regra: Pega qualquer requisição que não seja para a pasta 'public'
# e a reescreve para que passe por ela.
RewriteCond %{REQUEST_URI} !^/IsabellaAtacadista/public/
RewriteRule ^(.*)$ public/$1 [L,QSA]


<Files "*.json">
    Order allow,deny
    Deny from all
</Files>